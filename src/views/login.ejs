<%- include('includes/head') %> 
<%- include('includes/nav') %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Cadastro ou Login</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

      <%- include('includes/messages')%>

      <div class="row ">
        <div class="col">
            <h4>Faça seu cadastro</h4>

            <form action="/login/register" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken%>">
                <div class="form-group">
                  
                  <input type="email" placeholder="Seu e-mail" class="form-control my-3" name="email">
                </div>
                <div class="form-group">
                    
                    <input type="text" placeholder="Nome completo" class="form-control my-3" name="nomeCompleto">
                  </div>
                <div class="form-group">
                    
                    <input type="password" placeholder="Senha" class="form-control my-3" name="password">
                  </div>
                <button type="submit" class="btn btn-success my-3">Criar conta</button>
              </form>
        </div>
        <div class="col">
            <h4>Efetuar login</h4>

            <form action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken%>">
                <div class="form-group">
                  
                  <input type="email" placeholder="Seu e-mail" class="form-control my-3" name="email">
                </div>
                <div class="form-group">
                    <input type="password" placeholder="Senha" class="form-control my-3" name="password">
                  </div>
                <button type="submit" class="btn btn-success my-3 ">Entrar</button>
              </form>
        </div>
      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer') %>
